<div class="container">
    <div class="jumbotron">
        <EditForm Model="Actor" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <div class="mb-3">
                <InputText class="form-control" @bind-Value="@Actor.Name" placeholder="Actor"></InputText>
                <ValidationMessage For="@(()=>Actor.Name)"></ValidationMessage>
            </div>
            <div class="form-group row mb-3">
                <div class="col-sm-4">
                    <label>Fecha de nacimiento</label>
                    <InputDate class="form-control" @bind-Value="@Actor.BirthDate"></InputDate>
                    <ValidationMessage For="@(()=>Actor.BirthDate)"></ValidationMessage>
                </div>

                <div class="col-sm-4">
                    <label>Creditos</label>
                    <InputNumber class="form-control" @bind-Value="@Actor.KnowCredits" placeholder="Cantidad de crÃ©ditos">
                    </InputNumber>
                    <ValidationMessage For="@(()=>Actor.KnowCredits)"></ValidationMessage>
                </div>
                
                  <div class="col-sm-4">
                    <label>Nominaciones</label>
                    <InputTextArea class="form-control" @bind-Value="@Actor.Nominations" placeholder="Nominations">
                    </InputTextArea>
                    <ValidationMessage For="@(()=>Actor.Nominations)"></ValidationMessage>
                </div>
                
            </div>
               
                    <div class= "col mb-3">
                        <InputTextArea class="form-control" @bind-Value="@Actor.Biography"placeholder="Biografia"></InputTextArea> 
                        <ValidationMessage For = "@(() => Actor.Biography)"/>

                    </div>
               
                <br>
            <div class="form-group">
                <ImageComponent Label="photo" ImageSelected="ImageSelected" ImageURL="@imageURL"></ImageComponent>
            </div>
            <div class="form-group"></div>
            <button class="btn btn-success">Guardar</button>
        </EditForm>
    </div>
</div>

@code {
   
    [Parameter] public Actor Actor { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    private string imageURL;

    protected override void OnInitialized()
    {
        if (!string.IsNullOrWhiteSpace(Actor.Photo))
        {
            imageURL = Actor.Photo;
            Console.WriteLine(imageURL);
            Actor.Photo = null;
        }
    }

    private void ImageSelected(string imageB64)
    {
        Actor.Photo = imageB64;
        imageURL = null;
    }

}