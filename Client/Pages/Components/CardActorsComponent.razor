<div class="jumbotron">
    <h6>Actores</h6>
    <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var actor in Actors)
            {
                <div class="col-md-4">
                    <div class="card flex-md-row mb-4 box-shadow h-md-300">
                        <div class="card-body d-flex flex-column align-items-center">
                            @* Campos a mostrar en cada card de Actores *@
                             <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@actor.Name</h5>
                                    <p class="card-text">@actor.Photo</p>
                                    <p class="card-text">@actor.KnowCredits</p>
                                    <p class="card-text">@actor.Character</p>
                                    <p class="card-text">@actor.Nominations</p>
                                    <p class="card-text">@actor.Biography</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@actor.BirthDate</small>
                                </div>
                            </div>
                            @* Finalizaci√≥n de la estructura del card *@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@code {
    [Parameter] public List<Actor> Actors { get; set; }
}